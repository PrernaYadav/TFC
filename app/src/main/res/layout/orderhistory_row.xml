<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">


    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <ImageView
        android:id="@+id/iv_logohis"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/tv_deliverhis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:background="@android:color/black"
            android:padding="2dp"
            android:textColor="@android:color/white"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_pronamehis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matar Paneer"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#9a9a9a"/>

    <TextView
        android:id="@+id/tv_usernamehis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shreyansh srivastava"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#9a9a9a"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#9a9a9a"/>


        <TextView
            android:id="@+id/tv_quantityhis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#9a9a9a"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#9a9a9a"/>


        <TextView
            android:id="@+id/tv_pricehis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#9a9a9a"/>


    </LinearLayout>



    <TextView
        android:id="@+id/tv_datehis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19-01-2018"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#9a9a9a"/>

</LinearLayout>
