<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quantitybg"
    android:orientation="vertical"
    tools:context="com.dev.tfc.user.PostCommentActivity">


    <include
        layout="@layout/comments_actionbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/ivvvvv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tv_comname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Shreyansh Srivastava"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


  <!--  <RatingBar
        android:id="@+id/rb_comm"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:numStars="5"
        android:rating="5"
        android:scaleX="2.5"
        android:scaleY="2.5"
        />-->

    <RatingBar
        android:id="@+id/rb_comm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_gravity="center_horizontal"
        android:stepSize="1.0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@android:color/white">

<EditText
    android:id="@+id/et_com"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Comments"
    android:textColorHint="@android:color/black"
    android:padding="15dp"
    android:maxLength="600"
    android:textColor="@android:color/black"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">


            <TextView
                android:id="@+id/tv_counttt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/600"
            android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_postcom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="Post"
        android:layout_marginBottom="10dp"
        android:background="#04b4a9"
        android:textColor="#cad1d7"
        android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
