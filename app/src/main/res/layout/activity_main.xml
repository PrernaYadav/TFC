<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.dev.tfc.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
       android:layout_marginTop="325dp"
        android:orientation="vertical"
        android:background="#2A2442">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#4DFFFFFF">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mailbox" />
            </LinearLayout>
            <Button
            android:id="@+id/btn_mailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login with Mail id"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="#352F4C"
android:textSize="15sp"
            />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:background="#4DFFFFFF">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mailbox"
               />
            </LinearLayout>
        <Button
            android:id="@+id/btn_userregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_mailid"
            android:text="User Register"
            android:background="#3A589E"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="15sp"

            />
        </LinearLayout>


        <Button
            android:id="@+id/btn_busilogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_userregister"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textColor="#00DDCB"
            android:textSize="15sp"
            android:background="@drawable/borderet"
            android:text="Business Login" />

        <TextView
            android:id="@+id/tv_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:visibility="gone"
            android:text="Continue as Guest" />



    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:src="@drawable/chef"/>
    </FrameLayout>
</LinearLayout>
